    \begin{tikzpicture}[remember picture, overlay]
        % Draw Gray Sidebar
        \fill[sidebarbg] (current page.north west) rectangle ++(0.38\paperwidth, -\paperheight);
        % Draw Dark Header Background (Top Banner)
        \fill[headerbg] (current page.north west) rectangle ++(\paperwidth, -3cm);
    \end{tikzpicture}%
}

% --- CUSTOM COMMANDS ---

% Header Name & Title
\newcommand{\name}[1]{{\fontsize{28}{32}\selectfont\bfseries\color{white}\uppercase{#1}}\\[6pt]}
