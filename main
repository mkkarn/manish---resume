% Contact Info in Header
\newcommand{\contact}[1]{\color{white}\small #1}

% Section Headers (Blue with Line)
\newcommand{\sectionheader}[1]{
    \vspace{12pt}
    {\color{accentblue}\Large\bfseries\uppercase{#1}}
    \vspace{4pt}
    \hrule height 1pt
    \vspace{8pt}
}

